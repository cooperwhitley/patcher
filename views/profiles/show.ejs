<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<img src="<%= profile.avatar %>">
<h1><%= profile.name %></h1>
<h4><%= profile.jobs %></h4>
<h4><%= profile.location %></h4>
<h4><%= profile.email %></h4>
<h4><%= profile.secondEmail %></h4>
<h4><%= profile.phoneNum %></h4>

<% profile.websites.forEach(website =>{ %>
    <% if (website.length) { %>
        <a href="<%= website %>" target="_blank"><%= website %></a>
    <% } %>
<% }) %>

<p><%= profile.bio %></p>

<% if (user && profile.owner?._id.equals(user?._id)) { %>
    <a href="/profiles/edit/<%= profile._id %>"><button type="button" class="btn btn-success">edit profile</button></a>
<% } %>

<div class="card w-75">
    <% let alreadyEndorsed = false %>
    <% if (user && profile.endorsements.some(e => e.author == user._id)) { alreadyEndorsed = true } %>
    <% if (user && user.id != profile.owner && !alreadyEndorsed) { %>
        <form action="/endorsements/<%= profile._id %>" method="POST">
            <fieldset>
                <label class="form-label">endorse <%= profile.name %></label>
                <input type="text" class="form-control mb-1" name="note" maxlength="240" placeholder="endorsement">
                <input type="submit" value="add endorsement" class="btn btn-success">
            </fieldset>
        </form>
    <% } else if (!user) { %>
        <h5 class="card-title"><a href="/auth/google">log in</a> to endorse <%= profile.name %>!</h5>
    <% } %>
</div>

<% if (profile.endorsements.length) { %>
    <% profile.endorsements.forEach(endorsement => { %>
        <div class="card w-75">
            <div class="card-body">
                <img src="<%= endorsement.author.avatar %>" alt="<%= endorsement.author.name %>'s profile picture">
                <a href="/profiles/<%= endorsement.author._id %>"><h5 class="card-title"><%= endorsement.author.name %></h5></a>
                <p class="card-text"><%= endorsement.note %></p>
                <% if (endorsement.author?._id.equals(user?._id)) { %>
                    <form action="/endorsements/<%= profile._id %>/<%= endorsement._id %>?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-danger" value="delete patch">
                    </form>
                <% } %>
            </div>
        </div>
        <br>
    <% }) %>
<% } %>

<% posts.forEach(post => { %>
    <div class="card w-75">
        <div class="card-body">
            <h6 class="card-title"><%= post.title %></h6>
            <p class="card-text"><%= post.body %></p>
            <% if (post.spotify) { %>
                <iframe style="border-radius:12px" src="https://open.spotify.com/embed/<%= post.spotify %>?utm_source=generator" width="50%" height="250" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            <% } %>
            <a href="/posts/<%= post._id %>" class="card-link">view patch chain</a>
            <% if (post.owner?._id.equals(user?._id)) { %>
                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-danger" value="delete patch">
                </form>
            <% } %>
        </div>
    </div>
    <br>
<% }) %>

<%- include('../partials/footer') %>