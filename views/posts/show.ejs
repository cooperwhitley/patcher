<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="card w-75">
    <div class="card-body">
        <img src="<%= post.owner.avatar %>" alt="<%= post.owner.name %>'s profile picture">
        <a href="/profiles/<%= post.owner._id %>"><h5 class="card-title"><%= post.owner.name %></h5></a>
        <h6 class="card-title"><%= post.title %></h6>
        <p class="card-text"><%= post.body %></p>
        <% if (post.spotify) { %>
            <iframe style="border-radius:12px" src="https://open.spotify.com/embed/<%= post.spotify %>?utm_source=generator" width="75%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
        <% } %>
        <% if (post.owner?._id.equals(user?._id)) { %>
            <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-danger" value="delete patch">
            </form>
        <% } %>
    </div>
</div>
<div class="card w-75">
    <% if (user) { %>
        <form action="/comments/<%= post._id %>" method="POST">
            <fieldset>
                <label class="form-label">add to this patch chain!</label>
                <input type="text" class="form-control mb-1" name="note" maxlength="240" placeholder="comment">
                <input type="submit" value="add patch" class="btn btn-success">
            </fieldset>
        </form>
    <% } else { %>
        <h5 class="card-title"><a href="/auth/google">log in</a> to join the conversation!</h5>
    <% } %>
</div>
<% if (post.comments.length) { %>
    <% post.comments.forEach(comment => { %>
        <div class="card w-75">
            <div class="card-body">
                <img src="<%= comment.author.avatar %>" alt="<%= comment.author.name %>'s profile picture">
                <a href="/profiles/<%= comment.author._id %>"><h5 class="card-title"><%= comment.author.name %></h5></a>
                <p class="card-text"><%= comment.note %></p>
                <% if (comment.author?._id.equals(user?._id)) { %>
                    <form action="/comments/<%= post._id %>/<%= comment._id %>?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-danger" value="delete patch">
                    </form>
                <% } %>
            </div>
        </div>
    <% }) %>
<% } %>
    
<%- include('../partials/footer') %>